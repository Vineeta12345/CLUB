<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".category">

    <ImageView
        android:id="@+id/selectnews"
        android:layout_width="373dp"
        android:layout_height="148dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/new_title"

        android:textSize="20sp"
        tools:src="@drawable/new_title" />

    <Button
        android:id="@+id/proadd"
        android:layout_width="143dp"
        android:layout_height="90dp"
        android:layout_below="@+id/selectnews"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="-78dp"
        android:background="@drawable/hindishow" />

    <Button
        android:id="@+id/cultureadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proadd"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/politics" />

    <Button
        android:id="@+id/networkadd"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cultureadd"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/weather" />

    <Button
        android:id="@+id/sportsadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectnews"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-82dp"
        android:layout_marginRight="34dp"
        android:background="@drawable/sports" />


    <Button
        android:id="@+id/webadd"
        android:layout_width="131dp"
        android:layout_height="96dp"
        android:layout_below="@+id/sportsadd"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/tech" />

    <Button
        android:id="@+id/dataadd"
        android:layout_width="132dp"
        android:layout_height="106dp"
        android:layout_below="@+id/webadd"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btown" />


    <Button
        android:id="@+id/androadd"
        android:layout_width="152dp"
        android:layout_height="96dp"
        android:layout_below="@+id/networkadd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/worldshow" />




</RelativeLayout>